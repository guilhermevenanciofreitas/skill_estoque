<!DOCTYPE html>
<html lang="pt-br">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %></title>
  <style>
    /* Reset de margens e padding */
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      font-family: 'Arial', sans-serif;
      background-color: #f4f4f4;
      color: #333;
      padding: 0;
      margin: 0;
      height: 100%;
    }

    /* Cabeçalho do relatório */
    header {
      background-color: #2c3e50;
      color: white;
      padding: 5px 10px;
      text-align: left;
      margin-bottom: 10px;
    }

    header img {
      width: 40px;  /* Logo menor */
      margin-right: 5px;
    }

    header h1 {
      font-size: 16px;  /* Reduzido pela metade */
      margin-left: 55px; /* Ajuste do título após reduzir o logo */
    }

    header p {
      font-size: 7px; /* Reduzido pela metade */
      margin: 2px 0;
    }

    /* Estilo da tabela */
    table {
      width: 100%;
      border-collapse: collapse;
      margin-top: 10px;
    }

    th, td {
      padding: 4px 6px; /* Reduzido o padding */
      text-align: left;
      border-bottom: 1px solid #ddd;
    }

    th {
      background-color: #34495e;
      color: white;
      font-size: 8px;  /* Reduzido pela metade */
    }

    td {
      font-size: 7px;  /* Reduzido pela metade */
    }

    .price {
      font-weight: bold;
      color: #e74c3c;
    }

    /* Estilo do resumo */
    .summary {
      margin-top: 10px;
      padding: 5px;
      border-left: 5px solid #3498db;
    }

    .summary p {
      font-size: 8px; /* Reduzido pela metade */
      margin: 2px 0;
    }

    /* Rodapé */
    footer {
      position: relative;
      width: 100%;
      background-color: #2c3e50;
      color: white;
      padding: 5px 0;
      text-align: center;
      font-size: 6px;  /* Reduzido pela metade */
      margin-top: 15px;
    }

    .footer-content {
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 0 10px;
    }

    .footer-content p {
      margin: 0;
    }

    /* Paginação */
    .page-number {
      text-align: center;
      font-size: 6px; /* Reduzido pela metade */
      position: relative;
      width: 100%;
    }

    /* Container centralizado com margens pequenas */
    .container {
      width: 100%;
      margin: 0 auto;
      padding: 0 8px;  /* Reduzido o padding */
    }

    /* Ajustes para melhorar o layout ao imprimir em PDF */
    @page {
      size: A4;
      margin: 10mm;
    }

    body {
      margin: 0;
      padding: 0;
    }

    footer {
      position: fixed;
      bottom: 0;
      width: 100%;
    }

    /* Estilo para página */
    .content {
      page-break-before: always;
    }
  </style>
</head>
<body>

  <header>
    <h1><%= title %></h1>
    <p>Relatório de Produtos - <%= new Date().toLocaleDateString() %></p>
  </header>

  <div class="container">
    <h2 style="font-size: 12px; margin-top: 0;">Detalhes dos produtos</h2>
    <table>
      <thead>
        <tr>
            <th>Código</th>
            <th>Descrição</th>
            <th>Un.</th>
            <th>Custo</th>
            <th>Médio</th>
            <th>Últ Comp</th>
        </tr>
      </thead>
      <tbody>
        <% items.forEach(item => { %>
          <tr>
            <td><%= item.codigo %></td>
            <td><%= item.produto %></td>
            <td><%= item.unidade %></td>
            <td class="price">R$ <%= item.custo?.toFixed(2) %></td>
            <td class="price">R$ <%= item.custoMedio?.toFixed(2) %></td>
            <td class="price">R$ <%= item.ultimaCompra?.toFixed(2) %></td>
          </tr>
        <% }) %>
      </tbody>
    </table>

    <div class="summary">
      <h3 style="font-size: 10px;">Resumo do Relatório</h3>
      <p><strong>Total de Vendas:</strong> R$ <%= totalVendas.toFixed(2) %></p>
      <p><strong>Total de Itens Vendidos:</strong> <%= totalItens %> produtos</p>
    </div>
  </div>

  <footer>
    <div class="footer-content">
      <p></p>
      <p>Data de Impressão: <%= new Date().toLocaleDateString() %></p>
    </div>
  </footer>

  <!-- Paginação (Somente no PDF gerado com Puppeteer ou html-pdf) -->
  <div class="page-number">
    Página <span class="pageNumber"></span>
  </div>

</body>
</html>
